{
  "name": "decode-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "prebuild": "npm run type-check && npm run lint",
    "prebuild:prod": "npm run type-check",
    "build": "next build",
    "build:prod": "npm run prebuild:prod && next build",
    "build:minimal": "next build",
    "start": "PORT=${PORT:-3000} HOSTNAME=127.0.0.1 next start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "dev:server": "next dev -H 0.0.0.0 -p 3000"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/react-fontawesome": "^3.0.1",
    "@reown/appkit": "^1.8.6",
    "@reown/appkit-adapter-ethers": "^1.8.6",
    "ethers": "^6.15.0",
    "mongodb": "^6.20.0",
    "next": "15.5.3",
    "pino-pretty": "^13.1.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-loading-skeleton": "^3.5.0",
    "react-toastify": "^11.0.5",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "overrides": {
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9"
  }
}
